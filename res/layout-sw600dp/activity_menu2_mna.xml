<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu2MNA_Activity"
    tools:ignore="UselessParent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.48"
        android:background="@drawable/background_cool" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_twitter"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textView2"
                android:background="@drawable/ic_facebook"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textView3"
                android:background="@drawable/ic_youtube"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

        <view
            xmlns:coverflow="http://schemas.android.com/apk/res/com.gomedia.mna"
            android:id="@+id/coverflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            class="com.fk.coverflow.CoverFlow"
            coverflow:imageHeight="550dip"
            coverflow:imageReflectionRatio="0.5"
            coverflow:imageWidth="500dip"
            coverflow:reflectionGap="0dip"
            coverflow:withReflection="true" >
        </view>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="#FF6F3C"
                android:paddingBottom="5dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:text="@string/menu_txt_ver_lista"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ccf2f2f2"
                android:textStyle="normal|bold|italic" 
                android:textSize="@dimen/description"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#FF6F3C" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>